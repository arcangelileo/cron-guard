# ─── CronGuard Environment Variables ────────────────────────────
# Copy this file to .env and fill in the values.
# All variables use the CRONGUARD_ prefix.
# ────────────────────────────────────────────────────────────────

# ── Required ────────────────────────────────────────────────────

# Secret key for signing JWT tokens. Generate one with:
#   python -c "import secrets; print(secrets.token_urlsafe(64))"
CRONGUARD_SECRET_KEY=change-me-to-a-random-secret-key

# ── Application ─────────────────────────────────────────────────

# Public-facing URL (used in ping URLs shown to users and email links)
CRONGUARD_BASE_URL=http://localhost:8000

# Port to expose (only used by docker-compose)
CRONGUARD_PORT=8000

# ── Database ────────────────────────────────────────────────────

# SQLite database URL (default stores in /data inside Docker)
# For local dev: sqlite+aiosqlite:///cronguard.db
# For Docker:    sqlite+aiosqlite:////data/cronguard.db
# CRONGUARD_DATABASE_URL=sqlite+aiosqlite:////data/cronguard.db

# ── Email Alerts (SMTP) ────────────────────────────────────────

# SMTP server for sending alert emails.
# Leave SMTP_HOST empty or set to "localhost:1025" for dev mode (logs only).
CRONGUARD_SMTP_HOST=
CRONGUARD_SMTP_PORT=587
CRONGUARD_SMTP_USER=
CRONGUARD_SMTP_PASSWORD=
CRONGUARD_SMTP_TLS=true
CRONGUARD_SMTP_FROM_EMAIL=alerts@cronguard.dev

# ── Examples for common SMTP providers ──────────────────────────
#
# Gmail (use App Password, not your regular password):
#   CRONGUARD_SMTP_HOST=smtp.gmail.com
#   CRONGUARD_SMTP_PORT=587
#   CRONGUARD_SMTP_USER=you@gmail.com
#   CRONGUARD_SMTP_PASSWORD=your-app-password
#   CRONGUARD_SMTP_TLS=true
#
# SendGrid:
#   CRONGUARD_SMTP_HOST=smtp.sendgrid.net
#   CRONGUARD_SMTP_PORT=587
#   CRONGUARD_SMTP_USER=apikey
#   CRONGUARD_SMTP_PASSWORD=your-sendgrid-api-key
#   CRONGUARD_SMTP_TLS=true
#
# Mailgun:
#   CRONGUARD_SMTP_HOST=smtp.mailgun.org
#   CRONGUARD_SMTP_PORT=587
#   CRONGUARD_SMTP_USER=postmaster@your-domain.mailgun.org
#   CRONGUARD_SMTP_PASSWORD=your-mailgun-password
#   CRONGUARD_SMTP_TLS=true
